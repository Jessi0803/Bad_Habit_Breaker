{
  "manifest_version": 3,
  "name": "Habit Breaker",
  "version": "1.0.0",
  "description": "AI agent that monitors your browsing and intervenes when you're getting distracted",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.clerk.accounts.dev/*",
    "https://api.clerk.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/voices/*.mp3", 
        "assets/images/*.jpg",
        "assets/images/*.webp",
        "clerk-config.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

