{
  "manifest_version": 3,
  "name": "Habit Breaker",
  "version": "1.0.0",
  "description": "AI agent that monitors your browsing and intervenes when you're getting distracted",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/voices/*.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}

